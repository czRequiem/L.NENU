@model IEnumerable<L.NENU.Domain.NoticeInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutM.cshtml";
}
<h2>
    公告发布与管理
</h2>
<table>
    <tr>
        <th>
            公告标题
        </th>
        <th>
            创建时间
        </th>
        <td>
            创建人
        </td>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateUser.UserName)
            </td>
            <td>
                @Html.ActionLink("修改公告", "Edit", new { id = item.ID }) |
                @Html.ActionLink("查看公告", "Details", new { id = item.ID }) |
                @Html.ActionLink("删除公告", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
