@model L.NENU.Domain.TheHostInfo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutM.cshtml";
    
    var ShowInfoList = ViewBag.ShowInfoList as IList<L.NENU.Domain.ShowInfo>;
}

<h2>Details</h2>

<h2>@Model.UserName 主播所有节目</h2>
    <table style="width: 950px;" class="tbl">
    <tr>
        <th class="td" style="width: 75px;">
            节目编号
        </th>
        <th style="width: 150px;" class="td">
            节目标题
        </th>
        <th class="td" style="width: 75px;">
            创建时间
        </th>
        <th class="td" style="width: 50px;">
            主播
        </th>
        <th class="td" style="width: 50px;">
            介绍
        </th>
        <th class="td" style="width: 50px;">
            荔枝地址
        </th>
        <th class="td" style="width: 50px;">
            微信地址
        </th>
        <th class="td">
            操作
        </th>
    </tr>

@foreach (var item in ShowInfoList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @if (item.TheHostInfo.Count > 0)
                { 
                    @:存在
                }
                else
                { 
                    @:不存在
                                }
            </td>
            <td>
                @if (item.intro != ""&&item.intro!=null)
                {
                    @:存在
                     }
                else
                {
                    @:不存在
                                                                                            }
            </td>
            <td>
                @if (item.HtmlUrl != ""&&item.HtmlUrl!=null)
                {
                    @:存在
                     }
                else
                {
                    @:不存在
                                                                                            }
            </td>
            <td>
                @if (item.WeiChatUrl != ""&&item.WeiChatUrl!=null)
                { 
                    @:存在
                }
                else
                {
                    @:不存在
                                    }
            </td>
            <td>
                @Html.ActionLink("修改", "../ShowInfoM/Edit", new { id = item.ID }) |
                @Html.ActionLink("详细信息", "../ShowInfoM/Details", new { id = item.ID }) |
                @Html.ActionLink("删除", "../ShowInfoM/Delete", new { id = item.ID }, new { onclick = "return confirm('确认删除?删除后将不可恢复')" })
            </td>
        </tr>
    }

    
</table>