@model IList<L.NENU.Domain.ShowInfo>
@{
    ViewBag.Title = "Index";
    <!--引用jq-->
    <script type="text/javascript">
        $(function () {
            $("#prod_nav ul").tabs("#panes > div", {
                effect: 'fade',
                fadeOutSpeed: 400
            });
        });
    </script>
}
<!-- tab panes -->
<div id="prod_wrapper">
    <div id="panes">
        @foreach (var item in Model)
        { 
            <div>
                <img src="@item.ImgUrl" alt="" width="465" height="300">
                <h1>
                    @item.ShowTitle
                </h1>
                <p>
                    @item.intro
                </p>
                <p style="text-align: right; margin-right: 16px">
                    <a href="@item.HtmlUrl" class="button">More Info</a> <a href="#" class="button">Buy
                        Now</a></p>
            </div>
        }
    </div>
    <!-- END tab panes -->
    <div style="clear: both">
    </div>
    <!-- navigator -->
    <div id="prod_nav">
        <ul>
            @foreach (var item in Model)
            {
                int i = 1;
                <li><a href="#@i">
                    <img src="@item.ImgUrl" width="160" height="103" alt="">
                    <strong>@item.ShowTitle</strong>@item.ShowTime</a> </li>
                i++;
            }
        </ul>
    </div>
    <!-- END navigator -->
</div>
